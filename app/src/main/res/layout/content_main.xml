<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="daniel.broride.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView2"
        android:background="@android:drawable/checkbox_off_background"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:text="Ultima Carona"
        android:id="@+id/textView24"
        android:textColor="?attr/actionModeSplitBackground"
        android:rotationX="3"
        android:rotationY="2"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rideName"
        android:layout_alignBottom="@+id/rideName"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_directions_car_black_24dp"
        android:id="@+id/imageView4"
        android:scaleX="3"
        android:scaleY="3"
        android:scrollX="0dp"
        android:scrollY="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <Button
        android:text="Ir para a ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIrRide"
        android:onClick=""
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="BroRide!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textSize="40sp"
        android:textColorLink="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/rideDistance"
        android:layout_alignStart="@+id/rideDistance"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="Catch-a-ride!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:textColor="@android:color/black"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/rideDistance"
        android:layout_toEndOf="@+id/rideDistance" />

    <TextView
        android:text="Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rideDistance"
        android:textColor="@android:color/black"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/btnIrRide"
        android:layout_alignBottom="@+id/btnIrRide"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24" />

    <TextView
        android:text="Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rideName"
        android:textColor="@android:color/background_dark"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:layout_weight="1"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/btnIrRide"
        android:layout_alignLeft="@+id/btnIrRide"
        android:layout_alignStart="@+id/btnIrRide" />

</RelativeLayout>
